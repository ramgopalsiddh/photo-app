<p style="color: green"><%= notice %></p>

<%= render @image %>

<div class="mt-3">
  <%= link_to "Edit this image", edit_image_path(@image), class: "btn btn-primary me-2" %>
  <%= link_to "Back to images", images_path, class: "btn btn-secondary me-2" %>
  <%= button_to "Destroy this image", @image, class: "btn btn-danger mt-3", style: "display: inline-block;", data: { turbo_method: :delete, "turbo-confirm": "Are you sure you want to delete this image?" } %>

</div>
